					<case value="Darkness"> <link block="darkC" /> <link block="vicDark"/></case>
					<case value="Zero"> <link block="zeroC" /> <link block="vicZero"/></case>
					
					<case value="Darkness/Fire"> <link block="fireDarkC" /> <link block="vicZero"/> </case>
					<case value="Fire/Darkness"> <link block="fireDarkC" /> <link block="vicZero"/></case>
		
					<case value="Nature/Fire"> <link block="fireNatureC" /> <link block="vicZero"/></case>
					<case value="Fire/Nature"> <link block="fireNatureC" /> <link block="vicZero"/></case>
					
					<case value="Light/Water"> <link block="lightWaterC" /> <link block="vicZero"/></case>
					<case value="Water/Light"> <link block="lightWaterC" /> <link block="vicZero"/></case>
					
					<case value="Light/Nature"> <link block="lightNatureC" /> <link block="vicZero"/></case>
					<case value="Nature/Light"> <link block="lightNatureC" /> <link block="vicZero"/></case>
					
					<case value="Darkness/Water"> <link block="waterDarkC" /> <link block="vicZero"/></case>
					<case value="Water/Darkness"> <link block="waterDarkC" /> <link block="vicZero"/></case>

					<case value="Darkness/Nature"> <link block="darkNatureC" /> <link block="vicZero"/></case>
					<case value="Nature/Darkness"> <link block="darkNatureC" /> <link block="vicZero"/></case>
					
					<case value="Light/Darkness"> <link block="lightDarkC" /> <link block="vicZero"/></case>
					<case value="Darkness/Light"> <link block="lightDarkC" /> <link block="vicZero"/></case>
					
					<case value="Light/Fire"> <link block="lightFireC" /> <link block="vicZero"/></case>
					<case value="Fire/Light"> <link block="lightFireC" /> <link block="vicZero"/></case>
					
					<case value="Fire/Water"> <link block="waterFireC" /> <link block="vicZero"/></case>
					<case value="Water/Fire"> <link block="waterFireC" /> <link block="vicZero"/></case>
					
					<case value="Water/Nature"> <link block="waterNatureC" /> <link block="vicZero"/> </case>
					<case value="Nature/Water"> <link block="waterNatureC" /> <link block="vicZero"/> </case>
					
					<!-- multiciv cases are here for now but using white V-->
                    
