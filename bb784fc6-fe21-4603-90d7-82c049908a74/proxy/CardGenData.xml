					<case value="Darkness/Nature"> <link block="darkNatureS" /> </case>
					<case value="Nature/Darkness"> <link block="darkNatureS" /> </case>
					
					<case value="Light/Darkness"> <link block="lightDarkS" /> </case>
					<case value="Darkness/Light"> <link block="lightDarkS" /> </case>
					
					<case value="Light/Fire"> <link block="lightFireS" /> </case>
					<case value="Fire/Light"> <link block="lightFireS" /> </case>
					
					<case value="Fire/Water"> <link block="waterFireS" /> </case>
					<case value="Water/Fire"> <link block="waterFireS" /> </case>
					
					<case value="Water/Nature"> <link block="waterNatureS" /> </case>
					<case value="Nature/Water"> <link block="waterNatureS" /> </case>
				
					<default> <link block="lightS" /> </default>
				</switch>
			</conditional>	
            
            <conditional>
				<if property="Rules" contains="{SHIELD TRIGGER}">
					<link block="sTrig" />
  				</if>
			</conditional>
			
		</overlayblocks>
		
		<textblocks>
			<conditional>
                <if property="Civilization" value="Zero">	
                    <link block="zerotitle"><property name="Name" /></link>
                    <link block="zerorace"><property name="Race" /></link>
                    <link block="zerocost"><property name="Cost" /></link>

                </if>
                <else>
                    <link block="title"><property name="Name" /></link>
                    <link block="race"><property name="Race" /></link>
                    <link block="cost"><property name="Cost" /></link>

                </else>
            </conditional>			
			<link block="typeS"><property name="Type" /></link>
			<link block="rules"><property name="Rules" /></link>
		</textblocks>
	</template>
    
	
</templates>
